{
  "manifest_version": 2,
  "name": "TOTP Autofill (Minimal)",
  "version": "1.0.0",
  "description": "Store a TOTP secret per site and autofill one-time codes.",
  "permissions": ["storage", "tabs", "<all_urls>"],
  "browser_action": {
    "default_title": "TOTP Autofill",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
