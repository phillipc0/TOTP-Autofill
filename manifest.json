{
  "manifest_version": 2,
  "name": "TOTP Autofill",
  "version": "1.0.1",
  "description": "Store a TOTP secret per site, then the extension autofills the one-time codes into matching input fields. Source code and feature requests are available on GitHub: https://github.com/phillipc0/TOTP-Autofill",
  "permissions": [
    "storage",
    "tabs",
    "<all_urls>"
  ],
  "browser_action": {
    "default_title": "TOTP Autofill",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "totp-autofill@phillipc0.github.com",
      "data_collection_permissions": {
        "required": [
          "none"
        ]
      }
    }
  },
  "icons": {
    "48": "icon-48.png",
    "96": "icon-96.png"
  }
}
